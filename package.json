{
    "name": "trait-front",
    "private": true,
    "version": "1.0.0",
    "type": "module",
    "main": "main.js",
    "scripts": {
        "dev": "vite",
        "build": "vite build",
        "lint": "eslint .",
        "preview": "vite preview",
        "start": "concurrently \"npm run frontend\" \"npm run wait-electron\"",
        "frontend": "vite",
        "electron": "electron .",
        "wait-electron": "wait-on http://localhost:5173 && npm run electron",
        "build-all": "npm run build && electron-builder"
    },
    "dependencies": {
        "react": "^19.0.0",
        "react-dom": "^19.0.0"
    },
    "devDependencies": {
        "@eslint/js": "^9.22.0",
        "@types/react": "^19.0.10",
        "@types/react-dom": "^19.0.4",
        "@vitejs/plugin-react-swc": "^3.8.0",
        "concurrently": "^9.1.2",
        "cross-env": "^7.0.3",
        "electron": "^35.0.1",
        "electron-builder": "^25.1.8",
        "eslint": "^9.22.0",
        "eslint-plugin-react-hooks": "^5.2.0",
        "eslint-plugin-react-refresh": "^0.4.19",
        "globals": "^16.0.0",
        "vite": "^6.2.2",
        "wait-on": "^8.0.3"
    },
    "build": {
        "appId": "com.trait.app",
        "productName": "TRAIT",
        "files": [
            "dist/**/*",
            "main.js"
        ],
        "extraResources": [
            {
                "from": "backend/",
                "to": "backend/"
            }
        ],
        "mac": {
            "target": "dmg",
            "identity": null
        },
        "win": {
            "target": "nsis"
        }
    }
}